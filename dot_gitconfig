[user]
    email = seweryn.plywaczyk3@globallogic.com
    name = Seweryn Plywaczyk
[core]
    editor = vim
    longpaths = true
	pager = delta
[color]
    ui = auto
[pull]
    rebase = true
[submodule]
    recurse = true
[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    can = commit --no-edit --amend
    caan = commit -a --no-edit --amend
    unstage = reset HEAD --
    last = log -1 HEAD
    l = log --oneline
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    b = branch
    bs = branch -a
    ps = push
    pl = pull
    f = fetch
    a = add
    aa = add .
    rmc = rm --cached
    s = switch
    rbom = rebase origin/master
    rbc = rebase --continue
    rba = rebase --abort
    uncommit = reset --soft HEAD~1

[delta]
	side-by-side = true
