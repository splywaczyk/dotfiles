# ============================================
# Git with delta
# ============================================
# Delta is already configured in .gitconfig

# ============================================
# Useful functions
# ============================================

# fzf + git: checkout branch
fco() {
  local branches branch
  branches=$(git branch --all | grep -v HEAD) &&
  branch=$(echo "$branches" | fzf --height 40% --reverse) &&
  git checkout $(echo "$branch" | sed "s/.* //" | sed "s#remotes/[^/]*/##")
}

# fzf + git: show commits and diff
flog() {
  git log --oneline --color=always | fzf --ansi --preview 'git show --color=always {1}' --bind 'enter:execute(git show {1})'
}

# fzf + ripgrep: search and open in editor
frg() {
  local file line
  read -r file line <<<"$(rg --line-number --no-heading $@ | fzf -0 -1 | awk -F: '{print $1, $2}')"
  if [[ -n $file ]]; then
    ${EDITOR:-code} "$file:$line"
  fi
}

